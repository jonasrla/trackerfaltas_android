<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Index"
    android:background="#FFFFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/default_value"
        android:id="@+id/Pontos"
        android:clickable="true"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/pontos"
        android:id="@+id/textView2"
        android:layout_below="@+id/Pontos"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/adicionar"
        android:id="@+id/AdicionaMateria"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/adiciona"
        android:padding="10sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textColor="#FFFFFFFF"
        android:shadowColor="#373737"
        android:shadowDx="30"
        android:shadowDy="30" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ListaMateria"
        android:layout_below="@+id/AdicionaMateria"
        tools:listitem="@layout/item_list"
        android:smoothScrollbar="false"
        android:divider="#FFECECEC"
        android:dividerHeight="2sp"
        android:listSelector="@color/lightBlue"/>

</RelativeLayout>
